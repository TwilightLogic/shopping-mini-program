/* pages/home/home.wxss */

.swiper-box {
  padding: 32rpx;
}

.swiper-box swiper {
  height: 320rpx;
}

.swiper-box swiper image {
  width: 100%;
  height: 100%;
  border-radius: 22rpx;
}

.nav-box .nav {
  width: 1500rpx;
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.nav-box .nav:first-child {
  margin-left: 12rpx;
}

.nav-box .nav .item {
  width: 300prx;
  height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 0 16rpx;
  border: 1px solid rgba(0, 0, 0, .1);
  line-height: 60rpx;
  border-radius: 22rpx;
}

.nav-box .nav .item.current {
  color: #e67e22;
}